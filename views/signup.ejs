<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup Page</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            overflow: hidden;
            font-family: Arial, sans-serif;
            background-color: #000000;
        }

        /* Animated Background */
        #background {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: -1;
        }

        .bubble {
            position: absolute;
            bottom: -50px;
            width: 40px;
            height: 40px;
            background-color: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            animation: rise 10s infinite ease-in;
        }

        @keyframes rise {
            0% {
                transform: translateY(0) scale(1);
                opacity: 1;
            }
            100% {
                transform: translateY(-100vh) scale(1.5);
                opacity: 0;
            }
        }

        .bubble:nth-child(1) { left: 10%; width: 60px; height: 60px; animation-duration: 12s; }
        .bubble:nth-child(2) { left: 20%; width: 30px; height: 30px; animation-duration: 10s; animation-delay: 2s; }
        .bubble:nth-child(3) { left: 30%; width: 50px; height: 50px; animation-duration: 14s; animation-delay: 4s; }
        .bubble:nth-child(4) { left: 40%; width: 70px; height: 70px; animation-duration: 8s; animation-delay: 6s; }
        .bubble:nth-child(5) { left: 50%; width: 40px; height: 40px; animation-duration: 11s; animation-delay: 1s; }
        .bubble:nth-child(6) { left: 60%; width: 20px; height: 20px; animation-duration: 9s; animation-delay: 3s; }
        .bubble:nth-child(7) { left: 70%; width: 30px; height: 30px; animation-duration: 13s; animation-delay: 5s; }
        .bubble:nth-child(8) { left: 80%; width: 60px; height: 60px; animation-duration: 10s; animation-delay: 7s; }

        /* Signup Form */
        .form-container {
            background-color: rgba(255, 255, 255, 0.9);
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            width: 400px;
            z-index: 1;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #333;
        }

        .form-group {
            position: relative;
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            font-size: 16px;
            margin-bottom: 5px;
            color: #555;
        }

        .form-group input {
            width: 100%;
            padding: 10px;
            font-size: 14px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #f9f9f9;
        }

        .form-group input:focus {
            border-color: #007bff;
            background-color: #fff;
        }

        .toggle-password {
            position: absolute;
            right: 10px;
            top: 30px;
            cursor: pointer;
            font-size: 18px;
            color: #888;
        }

        .submit-btn {
            width: 100%;
            padding: 12px;
            background-color: #292a2c;
            color: white;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .submit-btn:hover {
            background-color: #757581;
        }

        p {
            text-align: center;
            margin-top: 15px;
            color: #777;
        }

        a {
            color: #007bff;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div id="background">
        <div class="bubble"></div>
        <div class="bubble"></div>
        <div class="bubble"></div>
        <div class="bubble"></div>
        <div class="bubble"></div>
        <div class="bubble"></div>
        <div class="bubble"></div>
        <div class="bubble"></div>
    </div>

    <div class="form-container">
        <h2>Sign Up</h2>
        <form action="/signup" method="post">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="username" id="name" placeholder="Enter your Name" required>
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" placeholder="Enter your Password" required>
                <span class="toggle-password" onclick="togglePassword()">üëÅÔ∏è</span>
            </div>

            <button type="submit" class="submit-btn">Signup</button>
        </form>
    </div>

    <script>
        function togglePassword() {
            const passwordInput = document.getElementById("password");
            const toggleIcon = document.querySelector(".toggle-password");

            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                toggleIcon.textContent = "üôà"; // Change to closed-eye icon
            } else {
                passwordInput.type = "password";
                toggleIcon.textContent = "üëÅÔ∏è"; // Change back to open-eye icon
            }
        }
    </script>
</body>
</html>
